-- Customers Table
CREATE TABLE Customers (
    customer_id INT PRIMARY KEY,
    first_name VARCHAR(100),
    last_name VARCHAR(100),
    city VARCHAR(100)
);

-- Orders Table
CREATE TABLE Orders (
    order_id INT PRIMARY KEY,
    customer_id INT,
    product VARCHAR(100),
    amount DECIMAL(10,2),
    FOREIGN KEY (customer_id) REFERENCES Customers(customer_id)
);
INSERT INTO Customers VALUES
(1, 'John', 'Doe', 'Hyderabad'),
(2, 'Alice', 'Smith', 'Bengaluru'),
(3, 'Bob', 'Brown', 'Mumbai'),
(4, 'Eve', 'Davis', 'Delhi');

INSERT INTO Orders VALUES
(101, 1, 'Laptop', 55000),
(102, 1, 'Mobile', 20000),
(103, 2, 'Tablet', 15000),
(104, 5, 'Headphones', 3000); -- Customer 5 does not exist
SELECT Customers.first_name, Customers.city, Orders.product, Orders.amount
FROM Customers
INNER JOIN Orders ON Customers.customer_id = Orders.customer_id;
SELECT Customers.first_name, Customers.city, Orders.product, Orders.amount
FROM Customers
LEFT JOIN Orders ON Customers.customer_id = Orders.customer_id;
SELECT Customers.first_name, Customers.city, Orders.product, Orders.amount
FROM Customers
RIGHT JOIN Orders ON Customers.customer_id = Orders.customer_id;
SELECT Customers.first_name, Customers.city, Orders.product, Orders.amount
FROM Customers
LEFT JOIN Orders ON Customers.customer_id = Orders.customer_id
UNION
SELECT Customers.first_name, Customers.city, Orders.product, Orders.amount
FROM Customers
RIGHT JOIN Orders ON Customers.customer_id = Orders.customer_id;
